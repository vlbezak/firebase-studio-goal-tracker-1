{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": ".",
    "rootDir": ".",
    "declaration": false
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "../node_modules"]
}
